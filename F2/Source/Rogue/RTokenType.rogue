module F2

class TokenTypeRogueGen : RogueCodeWriter
  METHODS
    method init_object
      class_name = "TokenType"

    method write_content
      writeln ...
        @|# Generated by Froley. WARNING: WILL BE OVERWRITTEN.
         |$module
         |enum TokenType( symbol:String, attributes=0:Int32 )
         |  DEFINITIONS

      indent += 4
      forEach (entry in generator.program.token_attributes.entries)
        writeln "ATTRIBUTE_$ = $" (entry.key.to_uppercase,entry.value)
      endForEach
      indent -= 4

      writeln
      writeln @|  CATEGORIES
      forEach (def in generator.program.tokens_by_name)
        local attr = 0
        if (def.attributes)
          attr |= generator.program.token_attributes[forEach in def.attributes]
        endIf
        write  ''    $("$"'' (def.name,generator.to_escaped_ascii(def.symbol,''"''))
        if (attr) write ","+attr
        writeln ")"
      endForEach

      writeln @|endEnum
endClass
