module F2

class RParser : RogueSourceWriter
  METHODS
    method init_object
      class_name = "Parser"

    method write_content
      writeln ...
        @|# Generated by Froley. Will not be overwritten; customize as desired.
         |$include "Cmd.rogue"
         |$include "ParserCore.rogue"
         |$include "Scanner.rogue"
         |
         |class Parser : ParserCore
         |  METHODS

      # User methods
      forEach (fn_name at i in generator.program.parser_user_calls)
        if (i > 0) writeln
        writeln "    method $" (fn_name)
        writeln "      noAction"
      endForEach

      writeln ...
        @|endClass
endClass

