module Froley

class RScanner : RogueSourceWriter
  METHODS
    method init_object
      class_name = "Scanner"

    method write_content
      writeln ...
        @|# Generated by Froley. Will not be overwritten; customize as desired.
         |$include "ScannerCore.rogue"
         |
         |class Scanner : ScannerCore
         |  METHODS

         # User methods
        forEach (fn_name at i in Program.scanner_user_calls)
          if (i > 0) writeln
          writeln "    method $" (fn_name)
          writeln "      noAction"
        endForEach

      writeln ...
        @|endClass
endClass
